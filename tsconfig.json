{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES5",
    "module": "CommonJS",
    "rootDirs": ["src", "demo", "__tests__"],
    "importHelpers": false,
    "noResolve": false,
    "noEmit": false,
    "declaration": false,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strictFunctionTypes": false,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "removeComments": true,
    "strictNullChecks": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "lib": ["DOM", "ES5", "ES6", "ES2017", "ESNext"]
  },
  "exclude": ["**/__tests__/**", "**/dist/**", "**/demo/**"]
}
